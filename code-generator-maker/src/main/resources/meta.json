{
    "name": "acm-template-pro-generator",
    "description": "ACM 示例模板生成器",
    "basePackage": "com.mango",
    "version": "1.0",
    "author": "mango",
    "createTime": "2024-2-14",
    "fileConfig": {
      "inputRootPath": ".source/acm-template-pro",
      "sourceRootPath": "D:/code/yupi-project/Code-Generator/code-sample/acm-template-pro",
      "outputRootPath": "generated",
      "type": "dir",
      "files": [
        {
          "inputPath": "src/com/yupi/acm/MainTemplate.java.ftl",
          "outputPath": "src/com/yupi/acm/MainTemplate.java",
          "type": "file",
          "generateType": "dynamic"
        },
        {
          "groupKey": "git",
          "groupName": "开源",
          "type": "group",
          "condition": "needGit",
          "files": [
            {
              "inputPath": ".gitignore",
              "outputPath": ".gitignore",
              "type": "file",
              "generateType": "static"
            },
            {
              "inputPath": "README.md",
              "outputPath": "README.md",
              "type": "file",
              "generateType": "static"
            }
          ]
        }
      ]
    },
    "modelConfig": {
      "models": [
        {
          "fieldName": "needGit",
          "type": "boolean",
          "description": "开源",
          "defaultValue": "true",
          "abbr": "n"
        },
        {
          "fieldName": "loop",
          "type": "boolean",
          "description": "是否生成循环",
          "defaultValue": "false",
          "abbr": "l"
        },
        {
          "groupKey": "mainTemplate",
          "groupName": "核心模版",
          "type": "MainTemplate",
          "description": "该参数主要用于主要业务",
          "condition": "loop",
          "models": [
            {
              "fieldName": "author",
              "type": "String",
              "description": "作者注释",
              "defaultValue": "yupi",
              "abbr": "a"
            },
            {
              "fieldName": "outputText",
              "type": "String",
              "description": "输出信息",
              "defaultValue": "sum :",
              "abbr": "m"
            }
          ]
        }
      ]
    }
  }

